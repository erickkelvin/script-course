<%= render 'home/menu' %>

<div class='content'>
  <h1>Cars</h1>
  (<%= link_to 'Add new car', new_car_path, class:'new_link' %>)
  <table>
  <tr>
    <th>#</th>
    <th>Plate</th>
    <th>Type</th>
    <th>Year</th>
    <th colspan='3'></th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.id %></td>
      <td><%= link_to car.plate, car_path(car) %></td>
      <td><%= car.car_type %></td>
      <td><%= car.year %></td>
      <td class='link'>
        <%= link_to car_path(car) do %>
            <%= fa_icon 'info-circle' %>
        <% end %>
      </td>
      <td class='link'>
        <%= link_to edit_car_path(car) do %>
            <%= fa_icon 'edit' %>
        <% end %>
      </td>
      <td class='link'>
        <%= link_to car_path(car), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= fa_icon 'trash-o' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
</div>