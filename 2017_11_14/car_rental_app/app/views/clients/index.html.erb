<%= render 'home/menu' %>

<div class='content'>
  <h1>Clients</h1>
  (<%= link_to 'Add new client', new_client_path, class:'new_link' %>)
  <table>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Address</th>
    <th>CPF</th>
    <th>RG</th>
    <th colspan="3"></th>
  </tr>

  <% @clients.each do |client| %>
    <tr>
      <td><%= client.id %></td>
      <td><%= link_to client.name, client_path(client) %></td>
      <td><%= link_to client.address, 'https://maps.google.com/?q=' + client.address, target: :_blank %></td>
      <td><%= client.cpf %></td>
      <td><%= client.rg %></td>
      <td class='link'>
        <%= link_to client_path(client) do %>
          <%= fa_icon 'info-circle' %>
        <% end %>
      </td>
      <td class='link'>
        <%= link_to edit_client_path(client) do %>
          <%= fa_icon 'edit' %>
        <% end %>
      </td>
      <td class='link'>
        <%= link_to client_path(client), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= fa_icon 'trash-o' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
</div>