<%= render 'home/menu' %>

<div class='content'>
    <h1>Rental details</h1>
    <p>
        <strong>Client name:</strong>
        <%= link_to @rental.client.name, client_path(@rental.client) %>
    </p>

    <p>
        <strong>Car plate:</strong>
        <%= link_to @rental.car.plate, car_path(@rental.car) %>
    </p>

    <p>
        <strong>Start date:</strong>
        <%= @rental.start_date %>
    </p>

    <p>
    <strong>End date:</strong>
    <%= @rental.end_date %>
    </p>

    <%= link_to 'Show all rentals', rentals_path %>
</div>